def_key "{{ ncmpcpp_keymap_toggle_playlist_repeat_mode }}"
  toggle_repeat

# toggle random-next-playlist-track mode
def_key "{{ ncmpcpp_keymap_toggle_random_next_playlist_track_mode }}"
  toggle_random

# shuffle all songs around in current playlist
